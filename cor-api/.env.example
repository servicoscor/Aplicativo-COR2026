# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://cor:cor123@localhost:5432/cor_db
DATABASE_URL_SYNC=postgresql://cor:cor123@localhost:5432/cor_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-change-in-production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Provider URLs (to be configured with real endpoints)
# WEATHER_PROVIDER_URL=https://api.weather.example.com
# WEATHER_PROVIDER_API_KEY=your-weather-api-key

# Radar Provider - Configure to enable real API
# RADAR_PROVIDER_URL=https://api.radar.example.com
# RADAR_PROVIDER_API_KEY=your-radar-api-key
# RADAR_PROVIDER_TIMEOUT=15.0
# RADAR_PROVIDER_AUTH_HEADER=Authorization
# RADAR_PROVIDER_AUTH_SCHEME=Bearer

# RAIN_GAUGE_PROVIDER_URL=https://api.raingauge.example.com
# RAIN_GAUGE_PROVIDER_API_KEY=your-raingauge-api-key
# INCIDENTS_PROVIDER_URL=https://api.incidents.example.com
# INCIDENTS_PROVIDER_API_KEY=your-incidents-api-key

# FCM (Firebase Cloud Messaging) - Configure for real push notifications
# Option 1: Path to service account JSON file
# FCM_CREDENTIALS_PATH=/path/to/firebase-service-account.json
# Option 2: Service account JSON as string (for containerized environments)
# FCM_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
# Optional: Override project ID
# FCM_PROJECT_ID=your-firebase-project-id
# Dry run mode (validates but doesn't send)
# FCM_DRY_RUN=false
# Batch settings
# PUSH_BATCH_SIZE=500
# PUSH_BATCH_DELAY_MS=100

# Cache TTLs (seconds)
CACHE_TTL_WEATHER_NOW=60
CACHE_TTL_WEATHER_FORECAST=600
CACHE_TTL_RADAR=180
CACHE_TTL_RAIN_GAUGES=120
CACHE_TTL_INCIDENTS=45
